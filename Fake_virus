import tkinter as tk
from tkinter import messagebox

def show_popup():
    messagebox.showinfo("Alert", "You Have Officaly downloaded a virus")

# Create the main window
root = tk.Tk()

# Create a button to trigger the pop-up message
button = tk.Button(root, text="Click Me", command=show_popup)
button.pack(pady=20)

# Run the main loop
root.mainloop()